name: E2E Smoke Tests

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]
  workflow_dispatch:
  schedule:
    # Run E2E tests daily at 6 AM UTC
    - cron: '0 6 * * *'

jobs:
  e2e-tests:
    name: Playwright E2E Smoke Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright browsers
        run: npx playwright install --with-deps chromium

      - name: Create test environment variables
        run: |
          echo "DATABASE_URL_SQLITE=./test_hotdog_diaries.db" >> $GITHUB_ENV
          echo "NODE_ENV=test" >> $GITHUB_ENV
          echo "JWT_SECRET=test-jwt-secret-for-e2e-testing-only" >> $GITHUB_ENV
          echo "ADMIN_USERNAME=admin" >> $GITHUB_ENV
          echo "ADMIN_PASSWORD=StrongAdminPass123!" >> $GITHUB_ENV
          echo "ADMIN_EMAIL=admin@hotdogdiaries.com" >> $GITHUB_ENV

      - name: Initialize test database
        run: |
          # Create a minimal test database setup
          npm run db:init || echo "Database init completed"

      - name: Create admin user for testing
        run: |
          # Ensure admin user exists for E2E tests
          npm run admin:create || echo "Admin user creation completed"

      - name: Build application
        run: npm run build

      - name: Run Playwright E2E tests
        run: npm run test:e2e
        env:
          PLAYWRIGHT_BASE_URL: http://localhost:3000

      - name: Upload Playwright report
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: playwright-report
          path: playwright-report/
          retention-days: 7

      - name: Upload test results
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: test-results
          path: test-results/
          retention-days: 7

  e2e-tests-firefox:
    name: E2E Tests (Firefox)
    runs-on: ubuntu-latest
    timeout-minutes: 20
    # Run Firefox tests only on main branch to save CI minutes
    if: github.ref == 'refs/heads/main'

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright browsers
        run: npx playwright install --with-deps firefox

      - name: Create test environment
        run: |
          echo "DATABASE_URL_SQLITE=./test_hotdog_diaries.db" >> $GITHUB_ENV
          echo "NODE_ENV=test" >> $GITHUB_ENV
          echo "JWT_SECRET=test-jwt-secret-for-e2e-testing-only" >> $GITHUB_ENV

      - name: Setup test data
        run: |
          npm run db:init || echo "Database init completed"
          npm run admin:create || echo "Admin user creation completed"

      - name: Build application
        run: npm run build

      - name: Run Playwright E2E tests (Firefox)
        run: npx playwright test --project=firefox
        env:
          PLAYWRIGHT_BASE_URL: http://localhost:3000