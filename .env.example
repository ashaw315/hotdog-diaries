# ========================================
# HOTDOG DIARIES ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env files with real secrets

# ========================================
# CORE APPLICATION SETTINGS
# ========================================
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-minimum-32-chars"

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL settings (production or USE_POSTGRES_IN_DEV=true)
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="hotdog_diaries_dev"
DATABASE_USER="your-db-user"
DATABASE_PASSWORD="your-db-password"

# SQLite settings (default for development)
DATABASE_URL_SQLITE="./hotdog_diaries_dev.db"

# Generic database URL (can be PostgreSQL or SQLite depending on environment)
DATABASE_URL="postgresql://user:password@localhost:5432/database"

# Set to true to use PostgreSQL in development
USE_POSTGRES_IN_DEV="false"

# Vercel Postgres (production)
POSTGRES_URL="postgres://user:password@host:port/database"
POSTGRES_PRISMA_URL="postgres://user:password@host:port/database?pgbouncer=true"
POSTGRES_URL_NO_SSL="postgres://user:password@host:port/database"
POSTGRES_URL_NON_POOLING="postgres://user:password@host:port/database?pgbouncer=false"
POSTGRES_USER="your-postgres-user"
POSTGRES_HOST="your-postgres-host"
POSTGRES_PASSWORD="your-postgres-password"
POSTGRES_DATABASE="your-postgres-database"

# Supabase Configuration (if using Supabase)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-key"
SUPABASE_SERVICE_KEY="your-supabase-service-key"
SUPABASE_ANON_KEY="your-supabase-anon-key"
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# JWT Secrets (generate with: openssl rand -hex 64)
JWT_SECRET="your-256-bit-jwt-secret-here-minimum-64-hex-chars"
JWT_REFRESH_SECRET="your-256-bit-jwt-refresh-secret-here-minimum-64-hex-chars"

# Admin credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-secure-admin-password"
ADMIN_EMAIL="admin@example.com"
ADMIN_FULL_NAME="Administrator"
ADMIN_TOKEN="your-admin-api-token-hex-format"

# CORS settings
CORS_ORIGIN="http://localhost:3000"

# ========================================
# SOCIAL MEDIA API KEYS
# ========================================
# Reddit API
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"
REDDIT_USERNAME="your-reddit-username"
REDDIT_PASSWORD="your-reddit-password"
REDDIT_USER_AGENT="HotdogDiaries/1.0"

# YouTube API
YOUTUBE_API_KEY="your-youtube-api-key"

# Giphy API
GIPHY_API_KEY="your-giphy-api-key"

# Pixabay API
PIXABAY_API_KEY="your-pixabay-api-key"

# Imgur API
IMGUR_CLIENT_ID="your-imgur-client-id"

# Tumblr API
TUMBLR_API_KEY="your-tumblr-api-key"
TUMBLR_CONSUMER_KEY="your-tumblr-consumer-key"
TUMBLR_CONSUMER_SECRET="your-tumblr-consumer-secret"

# Bluesky AT Protocol
BLUESKY_IDENTIFIER="your.handle.bsky.social"
BLUESKY_HANDLE="your.handle.bsky.social"
BLUESKY_APP_PASSWORD="your-bluesky-app-password"
BLUESKY_PASSWORD="your-bluesky-password"

# Lemmy Instance
LEMMY_INSTANCE_URL="https://lemmy.world"

# Unsplash API (for stock photos)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# ========================================
# AUTOMATION & CRON SETTINGS
# ========================================
# Cron job authentication token (32+ char hex)
CRON_SECRET="your-cron-secret-here"
CRON_TOKEN="your-cron-token-32-char-hex"

# GitHub Actions authentication token (32+ char hex)
AUTH_TOKEN="your-github-actions-auth-token-hex-format"

# Site URLs
SITE_URL="https://hotdog-diaries.vercel.app"
BASE_URL="https://hotdog-diaries.vercel.app"
NEXT_PUBLIC_APP_URL="https://hotdog-diaries.vercel.app"
NEXT_PUBLIC_BASE_URL="https://hotdog-diaries.vercel.app"

# Automation configuration
ENABLE_AUTO_SCANNING="true"
ENABLE_AUTO_POSTING="true"
AUTO_INIT_MONITORING="true"
POSTING_TIMES="07:00,10:00,13:00,16:00,19:00,22:00"

# Schedule source of truth enforcement
ENFORCE_SCHEDULE_SOURCE_OF_TRUTH="true"

# Alert system
ALERT_WEBHOOK_URL="https://hooks.slack.com/your-webhook-url"

# Monitoring & debugging
DEBUG="false"
VERBOSE="false"
DISABLE_HEALTH_LOOPS="false"
FORCE_API_CHECK="false"

# Service tokens
SERVICE_ACCOUNT_SECRET="your-service-account-secret"
TEST_TOKEN="your-test-token-for-ci"

# ========================================
# CI/CD & DEPLOYMENT VARIABLES
# ========================================
# GitHub integration
GITHUB_TOKEN="your-github-token"
GH_TOKEN="your-github-cli-token"

# Vercel deployment
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"
VERCEL_TEAM_ID="your-vercel-team-id"
VERCEL_GIT_COMMIT_REF="main"
VERCEL_GIT_COMMIT_SHA="your-commit-sha"

# Testing & CI configuration
PLAYWRIGHT_BASE_URL="http://localhost:3000"
JEST_WORKER_ID="1"
NEXT_PUBLIC_CI="false"
NEXT_PUBLIC_CRON_SECRET="your-public-cron-secret"
NEXT_PUBLIC_ADMIN_TOKEN="your-public-admin-token"

# Email configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-app-password"
SMTP_FROM="notifications@hotdog-diaries.com"

# Content scanning configuration
DAYS_BACK="7"
