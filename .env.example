# ========================================
# HOTDOG DIARIES ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env files with real secrets

# ========================================
# CORE APPLICATION SETTINGS
# ========================================
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here-minimum-32-chars"

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL settings (production or USE_POSTGRES_IN_DEV=true)
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="hotdog_diaries_dev"
DATABASE_USER="your-db-user"
DATABASE_PASSWORD="your-db-password"

# SQLite settings (default for development)
DATABASE_URL_SQLITE="./hotdog_diaries_dev.db"

# Set to true to use PostgreSQL in development
USE_POSTGRES_IN_DEV="false"

# Vercel Postgres (production)
POSTGRES_URL="postgres://user:password@host:port/database"
POSTGRES_PRISMA_URL="postgres://user:password@host:port/database?pgbouncer=true"
POSTGRES_URL_NO_SSL="postgres://user:password@host:port/database"
POSTGRES_URL_NON_POOLING="postgres://user:password@host:port/database?pgbouncer=false"
POSTGRES_USER="your-postgres-user"
POSTGRES_HOST="your-postgres-host"
POSTGRES_PASSWORD="your-postgres-password"
POSTGRES_DATABASE="your-postgres-database"

# Supabase Configuration (if using Supabase)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-key"
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# JWT Secrets (generate with: openssl rand -hex 64)
JWT_SECRET="your-256-bit-jwt-secret-here-minimum-64-hex-chars"
JWT_REFRESH_SECRET="your-256-bit-jwt-refresh-secret-here-minimum-64-hex-chars"

# Admin credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="your-secure-admin-password"
ADMIN_EMAIL="admin@example.com"
ADMIN_FULL_NAME="Administrator"

# CORS settings
CORS_ORIGIN="http://localhost:3000"

# ========================================
# SOCIAL MEDIA API KEYS
# ========================================
# Reddit API
REDDIT_CLIENT_ID="your-reddit-client-id"
REDDIT_CLIENT_SECRET="your-reddit-client-secret"
REDDIT_USERNAME="your-reddit-username"
REDDIT_PASSWORD="your-reddit-password"
REDDIT_USER_AGENT="HotdogDiaries/1.0"

# YouTube API
YOUTUBE_API_KEY="your-youtube-api-key"

# Giphy API
GIPHY_API_KEY="your-giphy-api-key"

# Pixabay API
PIXABAY_API_KEY="your-pixabay-api-key"

# Imgur API
IMGUR_CLIENT_ID="your-imgur-client-id"

# Tumblr API
TUMBLR_API_KEY="your-tumblr-api-key"
TUMBLR_API_SECRET="your-tumblr-api-secret"

# Bluesky AT Protocol
BLUESKY_IDENTIFIER="your.handle.bsky.social"
BLUESKY_APP_PASSWORD="your-bluesky-app-password"

# ========================================
# AUTOMATION & CRON SETTINGS
# ========================================
# Cron job authentication
CRON_SECRET="your-cron-secret-here"

# GitHub Actions authentication token
AUTH_TOKEN="your-github-actions-auth-token"

# Automation configuration
ENABLE_AUTO_SCANNING="true"
ENABLE_AUTO_POSTING="true"
POSTING_TIMES="07:00,10:00,13:00,16:00,19:00,22:00"
