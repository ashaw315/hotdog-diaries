{
  "framework": "nextjs",
  "buildCommand": "pnpm run build:prod",
  "outputDirectory": ".next",
  "functions": {
    "app/api/cron/scan-content/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/post-content/route.ts": {
      "maxDuration": 30
    },
    "app/api/admin/*/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "VERCEL_FORCE_NO_BUILD_CACHE": "1"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}